<div class="card">
    <div class="card-header">
        <h3 class="card-title">Parents List</h3>
    </div>
    <!-- /.card-header -->
    <div class="card-body">
       
        
        <div class="card">
            <div class="col-xs-6">
                <table id="example1" class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>Parents Name(Father)</th>
                    <th>Parents Name (Mother)</th>
                    <th>Email</th>
                    <th>City</th>
                    <th>County</th>
                    <th>Country</th>

                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.FathersName </td>
                             <td>@item.MothersName </td>
                             
                            <td>@item.Email</td>
                           
                            <td>@item.Address.City</td>
                            <td>@item.Address.County</td>
                            <td>@item.Address.Country</td>
                            <td>
                            <a type="button" class="btn btn-primary" asp-area="" asp-controller="Parents" asp-route-id="@item.Id" asp-action="EditParentDetails"><i class="fa fa-pencil"></i> Edit</a>
                            </td>
                            <td>
                                    <a type="button" class="btn btn-primary" asp-area="" asp-controller="Parents" asp-route-id="@item.Id" asp-action="Detail"><i class="fa fa-eye"></i> View</a>
                            </td>
                                <td>
                                    <a type="button" class="btn btn-primary" asp-area="" asp-controller="Parents" asp-route-id="@item.Id" asp-action="Delete"><i class="fa fa-trash"></i> Delete</a>
                                </td>
                        </tr>
                    }
            </tbody>
        </table>
    </div>
        </div>
      </div>
</div>
