<div class="card">
    <div class="card-header">
        <h3 class="card-title">Students List</h3>
    </div>
    <!-- /.card-header -->
    <div class="card-body">        
         <table id="example1" class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>Student Name</th>
                    <th>Email</th>
                    <th>Gender</th>
                    <th>City</th>
                    <th>County</th>
                    <th>Country</th>

                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Firstname @item.Lastname </td>
                            <td>@item.Email</td>
                            <td>@item.Gender</td>
                            <td>@item.Address.City</td>
                            <td>@item.Address.County</td>
                            <td>@item.Address.Country</td>
                            <td>
                            <a type="button" class="btn btn-primary" asp-area="" asp-controller="Students" asp-route-id="@item.Id" asp-action="EditStudentDetails"><i class="fa fa-pencil"></i> Edit</a>
                            </td>
                            <td>
                                    <a type="button" class="btn btn-primary" asp-area="" asp-controller="Students" asp-route-id="@item.Id" asp-action="Detail"><i class="fa fa-eye"></i> View</a>
                            </td>
                                <td>
                                    <a type="button" class="btn btn-primary" asp-area="" asp-controller="Students" asp-route-id="@item.Id" asp-action="Delete"><i class="fa fa-trash"></i> Delete</a>
                                </td>
                        </tr>
                    }
            </tbody>
        </table>
    </div>
        
      
</div>
